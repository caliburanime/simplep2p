{
	"schemaVersion": 1,
	"id": "direct-connect",
	"version": "${version}",
	"name": "Direct Connect P2P",
	"description": "Peer-to-peer connection mod for Minecraft. Connect directly to friends without port forwarding using UDP hole punching.",
	"authors": [
		"calibur"
	],
	"contact": {
		"homepage": "https://github.com/calibur/direct-connect",
		"sources": "https://github.com/calibur/direct-connect"
	},
	"license": "MIT",
	"icon": "assets/direct-connect/icon.png",
	"environment": "*",
	"entrypoints": {
		"main": [
			"calibur.directconnect.DirectConnect"
		],
		"client": [
			"calibur.directconnect.DirectConnectClient"
		]
	},
	"mixins": [
		"direct-connect.mixins.json",
		{
			"config": "direct-connect.client.mixins.json",
			"environment": "client"
		}
	],
	"depends": {
		"fabricloader": ">=0.18.3",
		"minecraft": "~1.21.10",
		"java": ">=21",
		"fabric-api": "*"
	}
}